@page "/TiposTecnicos/Details"
@page "/TiposTecnicos/Details/{TipoId:int}"
@inject TiposTecnicosServices tiposTecnicosServices
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Detalles del t&eacute;cnico</PageTitle>
@if (TiposTecnicos != null)
{
    <div class="container">
        <div class="card shadow-header">
            <div class="card-header  bg-primary text-white text-center py-2 rounded">
                <h3 class="text-center"><strong>Detalles del t&eacute;cnico</strong></h3>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">

                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li><strong>TecnicoId:</strong> @TiposTecnicos.TipoTecnicoId</li>
                                <li><strong>Nombre:</strong> @TiposTecnicos.Descripcion</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-outline-primary" @onclick="Volver"><i class="bi bi-box-arrow-left"></i> Volver</button>
            </div>
        </div>
    </div>
}
else
{
    <p>T&eacute;cnico no encontrado.</p>
}


@code {

    [Parameter]
    public int TipoId { get; set; }
    public TiposTecnicos? TiposTecnicos { get; set; } = new TiposTecnicos();


    protected override async Task OnInitializedAsync()
    {
        TiposTecnicos = await tiposTecnicosServices.Buscar(TipoId);
    }
    public void Volver()
    {
        navigationManager.NavigateTo("/TiposTecnicos/Index");
    }
}
